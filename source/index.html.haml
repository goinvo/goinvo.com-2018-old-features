- content_for(:page_head) do
	= stylesheet_link_tag "sections/homepage", :async => true
	:javascript
		posts = [];
		var randNum = Math.ceil(Math.random()*3);
		$.ajax({
			// Maybe make this better soon
			url      : "https://query.yahooapis.com/v1/public/yql?q=select%20*%20from%20xml%20where%20url%20%3D%20'http%3A%2F%2Fyes.goinvo.com%2Farticles%2Frss.xml'&format=json&env=store%3A%2F%2Fdatatables.org%2Falltableswithkeys",
			dataType : 'json',
			success  : function (data) {
				if (data['query'] && data['query']['results']) {
					// Wow
					$.each(data['query']['results']['rss']['channel']['item'], function (i, e) {
						posts.push(e);
					});
				}

				// Randomizing the homepage top banner
				var randNum = Math.floor((Math.random() * 4));

				var homepageHeaderContent = [
					{
						backgroundImage: '/images/home/family-doctor-visit.jpg',
						headerText: 'Design better outcomes',
						subHeaderText: 'We design beautiful user experiences for patients, clinicians, and hospitals.',
						portfolioImage: '/images/home/hgraph-visualize-health.png',
						portfolioText: 'See your health in one picture.',
						caseStudyUrl: 'healthcare/hgraph/',
						longTextClass: false
					},
					{
						backgroundImage: '/images/home/homepage-02.jpg',
						headerText: 'Design better efficiency',
						subHeaderText: 'We reimagine processes and services to streamline healthcare.',
						portfolioImage: '/images/home/homepage-image-02.png',
						portfolioText: '3Mâ€™s Natural Language Processing (NLP) ICD coding revolution.',
						caseStudyUrl: 'healthcare/3m/',
						longTextClass: false
					},
					{
						backgroundImage: '/images/home/homepage-03.jpg',
						headerText: 'Magical software for personalized medicine',
						subHeaderText: 'The software we design helps progressive healthcare companies create new markets and exploit future tech.',
						portfolioImage: '/images/home/homepage-image-03.png',
						portfolioText: 'Outpatient care weaves Cognitive Behavior Therapy (CBT) into everyday life.',
						caseStudyUrl: 'healthcare',
						buttonText: 'See Our Work',
						longTextClass: true
					},
					{
						backgroundImage: '/images/home/family-doctor-visit-diabetes.jpg',
						headerText: 'Patient tested. Clinician approved.',
						subHeaderText: 'We design magical experiences to change behavior for good.',
						caseStudyUrl: 'healthcare',
						buttonText: 'See Our Work',
						longTextClass: false
					}
				]

				if(homepageHeaderContent[randNum].longTextClass) {
					$('a#homepage-hero').addClass("long-text");
				}

				$('#homepage-hero .photo-container').css('background-image', "url(" + homepageHeaderContent[randNum].backgroundImage + ")");
				$('#homepage-hero .actual-title').text(homepageHeaderContent[randNum].headerText);
				
				if(homepageHeaderContent[randNum].portfolioImage) {
					$('#homepage-hero .actual-portfolio').prepend("<img src=" + homepageHeaderContent[randNum].portfolioImage + " alt='healthcare ux design' />");
				}

				$('#homepage-hero .actual-content').append(homepageHeaderContent[randNum].subHeaderText);

				if(homepageHeaderContent[randNum].portfolioText) {
					$('#homepage-hero .actual-portfolio-description').prepend("<p>" + homepageHeaderContent[randNum].portfolioText + "</p>");
				}

				if(homepageHeaderContent[randNum].buttonText) {
					$('#homepage-hero .actual-button').append(homepageHeaderContent[randNum].buttonText);
				} else {
					$('#homepage-hero .actual-button').append('View Case Study');
				}

				$('#homepage-hero').attr('href', homepageHeaderContent[randNum].caseStudyUrl);

				// Grabs the first image in the blog post
				var currentString = posts[0].encoded;
				var sIndex = currentString.indexOf('<img');
				currentString = currentString.substr(sIndex + 4);
				sIndex = currentString.indexOf('src=');
				currentString = currentString.substr(sIndex + 5);
				sIndex = currentString.indexOf('"');
				currentString = currentString.substr(0, sIndex);

				// Set the recent blog post section
				$('#oracle').removeClass('bar').addClass('half');
				$('.recent-blog-post.dynamic').append('<a href="' + posts[0].link + '" id="blog" class="block bar"><div class = "photo-container"></div><div class="title"><h5 class="tag">Latest Blog Post</h5><h2>' + posts[0].title + '</h2></div></a>');
				$('#blog .photo-container').css('background-image', 'url(' + currentString + ')');

			},
			error: function(a,b,c) {
				console.log(a);
				console.log(b);
				console.log(c);
			}
		});

