- content_for(:title) do
  = "Involution Studios Articles"
- content_for(:page_head) do
  = stylesheet_link_tag "articles/index"
  - meta = page_for_meta("articles")
  %meta{:name => "description", :content => "#{meta.description}" }
  %meta{:name => "keywords", :content => "#{meta.keywords}" }
  %meta{:name => "twitter:card", :content => "#{meta.twittercard}"}
  %meta{:name => "twitter:site", :content => "#{meta.twittersite}" }
  %meta{:name => "twitter:title", :content => "#{meta.twittertitle}" }
  %meta{:name => "twitter:description", :content => "#{meta.description}"}
  - if (meta.twitterimage)
    %meta{:name => "twitter:image", :content => "#{meta.twitterimage}"}
- most_recent_article = most_recent_article()
%header.most-recent-article
  .outer-container
    .inner-container
      %span
        Feature:
        = most_recent_article.date
      %h1= most_recent_article.title
.feature-article-list-container
  .feature-list-title Features
  %ul.feature-article-list
    - data.features.articles.each do |article|
      - if !article.is_most_recent
        %li{ :style => "background-image: url('/images/#{article.image}')" }
          %h1= article.title
          .feature-label= article.date
  %a.show-all-features Show all features

.blog-article-list-container
  %ul.blog-article-list
    %li Derp
    %li Derp 2
