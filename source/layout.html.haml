!!!
%html.no-js{lang: "en"}
	%head
		%meta{charset: "utf-8"}
		%meta{name: "viewport",  content: "width=device-width, initial-scale=1.0, minimum-scale=1.0"}

		%title
			- if content_for? :title
				= yield_content :title
			- else
				Boston UX Design &amp; UI Design | Involution Studios
		= stylesheet_link_tag 'all', :async => true
		:javascript
			document.documentElement.className = "";
		= javascript_include_tag 'all'
		%script{:type => "text/javascript", :src => "//use.typekit.net/brw1pwx.js"}
		:javascript
			try{Typekit.load();}catch(e){ }
		= yield_content :page_head
	- currentPage = current_page.path
	- if currentPage.include? "healthcare"
		- bodyClass = "healthcare"
	- elsif currentPage.include? "products"
		- bodyClass = "products"
	- elsif currentPage.include? "studio"
		- bodyClass = "studio"
	- elsif currentPage.include? "articles"
		- bodyClass = "articles"
	- elsif currentPage.include? "contact"
		- bodyClass = "contact"
	%body{:class => bodyClass}
		#fb-root
		:javascript
			(function(d, s, id) {
				var js, fjs = d.getElementsByTagName(s)[0];
				if (d.getElementById(id)) return;
				js = d.createElement(s); js.id = id;
				js.src = "//connect.facebook.net/en_US/sdk.js#xfbml=1&appId=564464970346249&version=v2.0";
				fjs.parentNode.insertBefore(js, fjs);
			}(document, 'script', 'facebook-jssdk'));
		#page-wrapper
			%header.main-header#main-header
				%nav.nav-content
					%a{:href => asset_url('/'), :id => "site-title"}
						= image_tag('logo-header@2x.png', alt: "Involution Studios", width: "48", height: "26")
					%a.nav-button.nav-partial.healthcare{:href => asset_url('healthcare')} Services
					%a.nav-button.nav-partial.studio{:href => asset_url('studio/team')} About
					.nav-hamburger#nav-hamburger Derp
				%nav.nav-full#nav-full
					%a.nav-button.healthcare{:href => asset_url('healthcare')} Services
					%a.nav-button.products{:href => asset_url('products')} Products
					%a.nav-button.studio{:href => asset_url('studio/team')} About
					%a.nav-button.articles{:href => asset_url('articles')} Articles
					%a.nav-button.contact{:href => asset_url('contact')} Contact
				- if currentPage.include? "studio"
					%header#studio-header
						.studio-head-container
							%a{:href => "/studio/team"}
								-if currentPage.include? "team"
									.studio-head-item.active-studio#team
										.image-box
										.studio-title Team
								-else
									.studio-head-item#team
										.image-box
										.studio-title Team
							%a{:href => "/studio/careers"}
								-if currentPage.include? "careers"
									.studio-head-item.active-studio#careers
										.image-box
										.studio-title Careers
								-else
									.studio-head-item#careers
										.image-box
										.studio-title Careers
							%a{:href => "/studio/live"}
								-if currentPage.include? "live"
									.studio-head-item.active-studio#live
										.image-box
										.studio-title Live
								-else
									.studio-head-item#live
										.image-box
										.studio-title Live
							%a{:href => "/studio/open-office-hours"}
								-if currentPage.include? "open-office-hours"
									.studio-head-item.active-studio#open-office-hours
										.image-box
										.studio-title.desktop Office Hours
										.studio-title.mobile Visit
								-else
									.studio-head-item#open-office-hours
										.image-box
										.studio-title.desktop Office Hours
										.studio-title.mobile Visit
							%a{:href => "/studio/history"}
								-if currentPage.include? "history"
									.studio-head-item.active-studio#history
										.image-box
										.studio-title History
								-else
									.studio-head-item#history
										.image-box
										.studio-title History
			#main-container
				.container.content
					= yield
