		#page-wrapper
			%header
				.main-header#main-header
					%nav.nav-content
						%a{:href => asset_url('/'), :id => "site-title", :class => "header-logo"}
							= partial "/images/logo-goinvo.svg"
						%span.header-tagline Designing the future of healthcare
						%a.nav-button.nav-partial.healthcare{:href => asset_url('healthcare')} Work
						%a.nav-button.nav-partial.studio{:href => asset_url('studio/team')} About
						.nav-hamburger#nav-hamburger
							= partial "/images/icon-menu.svg"
					%nav.nav-full#nav-full
						%a.nav-button.healthcare{:href => asset_url('healthcare')} Work
						%a.nav-button.products{:href => asset_url('products')} Products
						%a.nav-button.studio{:href => asset_url('studio/team')} About
						%a.nav-button.articles{:href => asset_url('articles')} Articles
						%a.nav-button.contact{:href => asset_url('contact')} Contact
				- if currentPage.include? "studio"
					.sub-header.studio-header#studio-header
						%a{:href => "/studio/team", :class => ('active-studio' if currentPage.include? 'team')}
							.studio-head-item#team
								.image-box
								.studio-title Team
						%a{:href => "/studio/careers", :class => ('active-studio' if currentPage.include? 'careers')}
							.studio-head-item#careers
								.image-box
								.studio-title Careers
						%a{:href => "/studio/open-office-hours", :class => ('active-studio' if currentPage.include? 'open-office-hours')}
							.studio-head-item#open-office-hours
								.image-box
								.studio-title Office Hours
						%a{:href => "/studio/history", :class => ('active-studio' if currentPage.include? 'history')}
							.studio-head-item#history
								.image-box
								.studio-title History
			.main-container#main-container{class: ('has-sub-header' if currentPage.include? 'studio')}
				.container.content
					= yield
