!!!
%html.no-js{lang: "en"}
	%head
		%meta{charset: "utf-8"}
		%meta{name: "viewport",  content: "width=device-width, initial-scale=1.0"}

		%title
			- if content_for? :title
				= yield_content :title
			- else
				Boston UI Design &amp; UX Design | Involution Studios
		= stylesheet_link_tag 'all'
		= javascript_include_tag 'all'
		%script{:type => "text/javascript", :src => "//use.typekit.net/brw1pwx.js"}
		:javascript
			try{Typekit.load();}catch(e){}
		= yield_content :page_head
	- currentPage = current_page.path
	- if currentPage.include? "work"
		- bodyClass = "work"
	- elsif currentPage.include? "studio"
		- bodyClass = "studio"
	- elsif currentPage.include? "team"
		- bodyClass = "team"
	- elsif currentPage.include? "careers"
		- bodyClass = "careers"
	- elsif currentPage.include? "contact"
		- bodyClass = "contact"
	%body{:class => bodyClass}
