						%a{:href => asset_url('/'), :id => "site-title"}
							= image_tag('logo-header@2x.png', alt: "Involution Studios", width: "48", height: "26")
							%span.tag-line Crafting exceptional software for progressive companies
						%nav#nav-buttons
							%a.nav-button.work{:href => asset_url('work')} Work
							-# %a.nav-button{:href => asset_url('products')}
							%a.nav-button.studio{:href => asset_url('studio')} Studio
							%a.nav-button.team{:href => asset_url('team')} Team
							%a.nav-button.careers{:href => asset_url('careers')} Careers
							%a.nav-button.articles{:href => asset_url('http://yes.goinvo.com/articles')} Articles
							%a.nav-button.contact{:href => asset_url('contact')} Contact
					#mobile-hamburger
						=image_tag('hamburger.svg');
					%nav#nav-buttons-mobile
						%a.nav-button.work{:href => asset_url('work')} Work
						-# %a.nav-button{:href => asset_url('products')}
						%a.nav-button.studio{:href => asset_url('studio')} Studio
						%a.nav-button.team{:href => asset_url('team')} Team
						%a.nav-button.careers{:href => asset_url('careers')} Careers
						%a.nav-button.articles{:href => asset_url('http://goinvo.hs-sites.com/articles')} Articles
						%a.nav-button.contact{:href => asset_url('contact')} Contact
			#main-container
				.container.content
					= yield
			%footer#main-footer
				.footerContent
					%span#phoneNum
						%a{href: "tel:6178037043"}  617&ndash;803&ndash;7043
