!!!
%html.no-js{lang: "en"}
	%head
		%meta{charset: "utf-8"}
		%meta{name: "viewport",  content: "width=device-width, initial-scale=1.0"}

		%title
			- if content_for? :title
				= yield_content :title
			- else
				Boston UI Design &amp; UX Design | Involution Studios
		= stylesheet_link_tag 'all', :async => true
		= javascript_include_tag 'all'
		%script{:type => "text/javascript", :src => "//use.typekit.net/brw1pwx.js"}
		:javascript
			try{Typekit.load();}catch(e){ }
		= yield_content :page_head
	- currentPage = current_page.path
	- if currentPage.include? "healthcare"
		- bodyClass = "healthcare"
	- elsif currentPage.include? "enterprise"
		- bodyClass = "enterprise"
	- elsif currentPage.include? "products"
		- bodyClass = "products"
	- elsif currentPage.include? "studio"
		- bodyClass = "studio"
	- elsif currentPage.include? "contact"
		- bodyClass = "contact"
	%body{:class => bodyClass}
		#fb-root
		:javascript
			(function(d, s, id) {
				var js, fjs = d.getElementsByTagName(s)[0];
				if (d.getElementById(id)) return;
				js = d.createElement(s); js.id = id;
				js.src = "//connect.facebook.net/en_US/sdk.js#xfbml=1&appId=564464970346249&version=v2.0";
				fjs.parentNode.insertBefore(js, fjs);
			}(document, 'script', 'facebook-jssdk'));
		#page-wrapper
			#site-overlay
				%header#main-header
					.header-content
						%a{:href => asset_url('/'), :id => "site-title"}
							= image_tag('logo-header@2x.png', alt: "Involution Studios", width: "48", height: "26")
							%span.tag-line Crafting exceptional software for progressive companies
						%nav#nav-buttons
							%a.nav-button.healthcare{:href => asset_url('healthcare')} 
								.nav-element Healthcare
							%a.nav-button.enterprise{:href => asset_url('enterprise')} 
								.nav-element Enterprise
							%a.nav-button.products{:href => asset_url('products')} 
								.nav-element Products
							%a.nav-button.studio{:href => asset_url('studio/team')}
								.nav-element Studio
							%a.nav-button.articles{:href => asset_url('http://yes.goinvo.com/articles')}
								.nav-element Articles
							%a.nav-button.contact{:href => asset_url('contact')}
								.nav-element Contact
					#mobile-hamburger
						=image_tag('hamburger.svg');
					%nav#nav-buttons-mobile
						%a.nav-button.healthcare{:href => asset_url('healthcare')} 
							.nav-element Healthcare
						%a.nav-button.enterprise{:href => asset_url('enterprise')}
							.nav-element Enterprise
						%a.nav-button.products{:href => asset_url('products')} 
							.nav-element Products
						%a.nav-button.studio{:href => asset_url('studio/team')}
							.nav-element Studio
						%a.nav-button.articles{:href => asset_url('http://goinvo.hs-sites.com/articles')}
							.nav-element Articles
						%a.nav-button.contact{:href => asset_url('contact')}
							.nav-element Contact
				- if currentPage.include? "studio"
					%header#studio-header
						.studio-head-container
							%a{:href => "http://goinvo.com/studio/team"}
								-if currentPage.include? "team"
									.studio-head-item.active-studio#team
										.image-box
										.studio-title Team
								-else
									.studio-head-item#team
										.image-box
										.studio-title Team
							%a{:href => "http://www.goinvo.com/studio/careers"}
								-if currentPage.include? "careers"
									.studio-head-item.active-studio#careers
										.image-box
										.studio-title Careers
								-else
									.studio-head-item#careers
										.image-box
										.studio-title Careers
							%a{:href => "http://www.goinvo.com/studio/live"}
								-if currentPage.include? "live"
									.studio-head-item.active-studio#live
										.image-box
										.studio-title Live
								-else
									.studio-head-item#live
										.image-box
										.studio-title Live
			#main-container
				.container.content
					= yield
			%footer#main-footer
				.footerContent
					%span#phoneNum
						%a{href: "tel:6178037043"}  617&ndash;803&ndash;7043
					%span.mail
						<a href="mailto:&#105;&#110;&#102;&#111;&#064;&#103;&#111;&#105;&#110;&#118;&#111;&#046;&#099;&#111;&#109;">&#105;&#110;&#102;&#111;&#064;&#103;&#111;&#105;&#110;&#118;&#111;&#046;&#099;&#111;&#109;</a>
					%span.twitter= link_to(image_tag('icon-twitter.svg'), "https://twitter.com/goinvo" )
					%span.address
						%a{href: "https://www.google.com/maps/place/Involution+Studios/@42.4160129,-71.1542221,17z/data=!3m1!4b1!4m2!3m1!1s0x89e3765076a6362b:0x20e26f4cc4eb5ced"} Map

