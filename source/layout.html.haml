!!!
%html.no-js{lang: "en"}
	%head
		
		%meta{charset: "utf-8"}
		%meta{name: "viewport",  content: "width=device-width, initial-scale=1.0"}
		
		= stylesheet_link_tag 'all'
		= javascript_include_tag 'all'
		= yield_content :page_head
 
		%title
			- if content_for? :title
				= yield_content :title
			- else
				Involution Studios
		
		%meta{content: "Involution Studios is a user interface and application design firm located in Boston and Columbus. We create great user experiences for desktop, mobile, and web applications.", name: "description"}/
		%meta{content: "boston user interface design, boston ui design, boston web application design, boston application design, boston mobile design, boston mobile application design, boston software design", name: "keywords"}/
			
	%body
		#page-wrapper
			#site-overlay
				%header#main-header
					%header#site-header
						.row
							.medium-12.small-12.columns
								= link_to( image_tag('logo-header.png', alt: "Involution Studios"), asset_url('/'), id: 'site-title')
								%div.tag-line
									Crafting exceptional software for progressive companies
								%nav#nav-buttons
									%span.nav-button
										= link_to 'Work', asset_url('work')
									%span.nav-button
										= link_to 'Products', asset_url('products')
									%span.nav-button
										= link_to 'Studio', asset_url('studio')
									%span.nav-button
										= link_to 'Team', asset_url('team')
									%span.nav-button
										= link_to 'Careers', asset_url('careers')
									%span.nav-button
										= link_to 'Articles', asset_url('http://goinvo.hs-sites.com/articles')
									%span.nav-button
										= link_to 'Contact', asset_url('contact')
						#mobile-hamburger
							=image_tag('hamburger.svg');
						%nav#nav-buttons-mobile
							%span.nav-button
								= link_to 'Work', asset_url('work')
							%span.nav-button
								= link_to 'Products', asset_url('products')
							%span.nav-button
								= link_to 'Studio', asset_url('studio')
							%span.nav-button
								= link_to 'Team', asset_url('team')
							%span.nav-button
								= link_to 'Careers', asset_url('careers')
							%span.nav-button
								= link_to 'Articles', asset_url('#')
							%span.nav-button
								= link_to 'Contact', asset_url('contact')
			#main-container
				.container.content
					= yield
			%footer#main-footer
				.row.footerContent
					.medium-8.columns.logocol.sidebar
						%p.mobile-hide.about-us
							%em
								We are a group of future thinkers changing the world through apps, platforms, and creative problem solving.
					.medium-4.columns.addrcol.sidebar
						%p#phoneNum
							%a{href: "tel:6178037043"}  617&ndash;803&ndash;7043
						%p.mail
							= mail_to "info@goinvo.com"
						%p.twitter= link_to(image_tag('twitter_foot.svg'), "https://twitter.com/goinvo", :target => "_blank" )
						%p.address
							%a{href: "https://www.google.com/maps/place/661+Massachusetts+Ave/@42.4159556,-71.1542426,17z/data=!3m1!4b1!4m2!3m1!1s0x89e376507914ce3b:0xd3401d7136ceb9f3"} Map 
