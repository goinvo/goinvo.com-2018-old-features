!!!
%html.no-js{lang: "en"}
	%head
		
		%meta{charset: "utf-8"}
		%meta{name: "viewport",  content: "width=device-width, initial-scale=1.0"}
		
		= stylesheet_link_tag 'all'
		= javascript_include_tag 'all'
		%script{:type => "text/javascript", :src => "//use.typekit.net/brw1pwx.js"}
		%script{:type => "text/javascript"}
			try{Typekit.load();}catch(e){}
		= yield_content :page_head
 
		%title
			- if content_for? :title
				= yield_content :title
			- else
				Involution Studios
		
		%meta{content: "Involution Studios is a user interface and application design firm located in Boston and Columbus. We create great user experiences for desktop, mobile, and web applications.", name: "description"}/
		%meta{content: "boston user interface design, boston ui design, boston web application design, boston application design, boston mobile design, boston mobile application design, boston software design", name: "keywords"}/
	%body
		#page-wrapper
			#site-overlay
				%header#main-header
					%header#site-header
						.medium-12.small-12.columns
							%a{:href => asset_url('/'), :id => "site-title"}
								= image_tag('logo-header.png', alt: "Involution Studios")
								.tag-line Crafting exceptional software for progressive companies
							%nav#nav-buttons
								%a.nav-button{:href => asset_url('work')} Work
								-# %a.nav-button{:href => asset_url('products')}
								%a.nav-button{:href => asset_url('studio')} Studio
								%a.nav-button{:href => asset_url('team')} Team
								%a.nav-button{:href => asset_url('careers')} Careers
								%a.nav-button{:href => asset_url('http://goinvo.hs-sites.com/articles')} Articles
								%a.nav-button{:href => asset_url('contact')} Contact
					#mobile-hamburger
						=image_tag('hamburger.svg');
					%nav#nav-buttons-mobile
						%a.nav-button{:href => asset_url('work')} Work
						-# %a.nav-button{:href => asset_url('products')}
						%a.nav-button{:href => asset_url('studio')} Studio
						%a.nav-button{:href => asset_url('team')} Team
						%a.nav-button{:href => asset_url('careers')} Careers
						%a.nav-button{:href => asset_url('http://goinvo.hs-sites.com/articles')} Articles
						%a.nav-button{:href => asset_url('contact')} Contact
			#main-container
				.container.content
					= yield
			%footer#main-footer
				.footerContent
					%p.mobile-hide.about-us
						-# Crafting exceptional software for progressive companies
					%p#phoneNum
						%a{href: "tel:6178037043"}  617&ndash;803&ndash;7043
					%p.mail
						= mail_to "info@goinvo.com"
					%p.twitter= link_to(image_tag('twitter_foot.svg'), "https://twitter.com/goinvo", :target => "_blank" )
					%p.address
						%a{href: "https://www.google.com/maps/place/661+Massachusetts+Ave/@42.4159556,-71.1542426,17z/data=!3m1!4b1!4m2!3m1!1s0x89e376507914ce3b:0xd3401d7136ceb9f3"} Map 
			
			= yield_content :worlds_end
